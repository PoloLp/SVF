<div class="container">
  <h2>Create a company</h2>

  <div class="row">
    <div class="col-sm-8">
      <%= simple_form_for @company do |f| %>
        <%= f.input :name, allow_blank: false, placeholder: "Company's name" %>
        <%= f.submit "Save the company", class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
