<div class="container">

  <div class="row">

    <h4><%= @share_catalog_list.count %> Fund reviews for all companies</h4>

    <div class="row">
      <div class="col-sm-12">

        <% @share_catalog_list.each do |share| %>

          <div class="col-sm-8">
          <p><%= "#{share.securityname} | isin : #{share.isin} " %></p>
          </div>

          <div class="col-sm-4">
            <% if !share.reviews.last.nil? %>
              <%= "last updated at : #{share.reviews.last.created_at.strftime('%d/%m/%Y')}" %>
            <% else %>
              <%= "no review" %>
            <% end %>
           </div>

        <% end %>
      </div>
    </div>
  </div>

