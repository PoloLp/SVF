<div class="container">
  <div class="row">
      <h2>Search by isin or name</h2>
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1">
      <div class="row">
        <%= form_tag shares_path, method: :get, class:"form-group form-inline" do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find a fund by isin or name" %>
            <%= select_tag :currency_query, options_for_select([["Euro", "EUR"],
                                                                ["US Dollar", "USD"],
                                                                ["GBP", "GBP"]]),
                                            include_blank: true,
                                            class:"form-control" %>
            <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div id="Sharelist1">
        <%= render 'empty_result' unless !@shares.empty? %>
        <%= render 'list_shares' %>
      </div>
    </div>
  </div>
</div>
