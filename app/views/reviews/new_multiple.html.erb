<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <h1>Edit strategy for multiples records</h1>
      <%= form_tag create_multiple_share_reviews_path [@shares, @reviews] do %>

        <%= fields_for :review do |f| %>
          <% if params[:field].blank? || params[:field] == "investment_strategy" %>
            <div class="field">
              <%= f.label :investment_strategy %><br />
              <%= f.text_field :investment_strategy, placeholder: "Commentaire de structure" %>
            </div>
          <% end %>
          <% if params[:field].blank? || params[:field] == "current_strategy" %>
            <div class="field">
              <%= f.label :current_strategy %><br />
              <%= f.text_field :current_strategy, placeholder: "Commentaire de stratÃ©gie"%>
          <% end %>
          </div>
        <% end %>
        <div class="actions">
          <%= submit_tag "Edit selected fields", class: "btn btn-primary" %>
        </div>

        <h3>Latest strategy reviews :</h3>
        <ul>
          <% @shares.each do |share| %>
            <li>

              <%= hidden_field_tag "share_ids[]", share.id %>

              <div class="share-list-item-name">
                <h3>
                  <%= render 'shares/currency_display', share: share %>
                  <%= " - #{share.isin} | Share name : #{share.securityname}" %>
                </h3>
              </div>

              <ul class="errors">
                <% share.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>

              <div class="share-list-item-name">
                <%= render 'reviews/last_review', share: share %>
              </div>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
